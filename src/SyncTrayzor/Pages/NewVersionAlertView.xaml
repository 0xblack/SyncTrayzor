<Window x:Class="SyncTrayzor.Pages.NewVersionAlertView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:s="https://github.com/canton7/Stylet"
        Width="600" MaxHeight="600"
        SizeToContent="Height">
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap">
            A new version of SyncTrayzor is available!<LineBreak/><LineBreak/>
            Version: <TextBlock Text="{Binding Version}"/><LineBreak/><LineBreak/>
            Do you want to download it now?
        </TextBlock>
        <TextBlock DockPanel.Dock="Top" Margin="0,10,0,0">Changelog:</TextBlock>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <StackPanel.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                    <Setter Property="Padding" Value="15,0"/> <!-- Slightly smaller -->
                </Style>
            </StackPanel.Resources>
            <Button IsDefault="True" Command="{s:Action Download}">Download Now</Button>
            <Button IsCancel="True" Command="{s:Action RemindLater}">Remind Me Later</Button>
            <Button IsCancel="True" Command="{s:Action DontRemind}">Don't Remind Me Again</Button>
        </StackPanel>
        <TextBlock DockPanel.Dock="Bottom" TextWrapping="Wrap" Margin="0,10,0,0">
            'Don't Remind Me Again' will silence reminders for this version. You can permanently disable
            new version alerts from the Settings page. Visit Help -> About to manually check for a new version.
        </TextBlock>
        <TextBox IsReadOnly="True" TextWrapping="Wrap" Text="{Binding Changelog}"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </DockPanel>
</Window>
