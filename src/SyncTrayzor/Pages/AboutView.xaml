<Window x:Class="SyncTrayzor.Pages.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:s="https://github.com/canton7/Stylet"
        Height="300" Width="250"
        WindowStyle="None" SizeToContent="WidthAndHeight"
        ShowInTaskbar="False">
    <Window.Resources>
        <s:BoolToVisibilityConverter x:Key="NoNewVersionVisibility" TrueVisibility="Collapsed" FalseVisibility="Visible"/>
    </Window.Resources>
    <DockPanel LastChildFill="False" Margin="10">
        <TextBlock DockPanel.Dock="Top" FontWeight="Bold" FontSize="25" HorizontalAlignment="Center" Margin="0,0,0,20">SyncTrayzor</TextBlock>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,5">
            <TextBlock>Version:</TextBlock>
            <TextBlock Text="{Binding Version}" Margin="5,0,0,0"/>
            <TextBlock Visibility="{Binding IsPortable, Converter={x:Static s:BoolToVisibilityConverter.Instance}}" Margin="5,0,0,0">(portable)</TextBlock>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,5">
            <TextBlock>Syncthing Version:</TextBlock>
            <TextBlock Text="{Binding SyncthingVersion}" Margin="5,0,0,0"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,5"
                    Visibility="{Binding NewerVersion, Converter={x:Static s:BoolToVisibilityConverter.Instance}}">
            <TextBlock Foreground="Red">New version available:</TextBlock>
            <TextBlock Text="{Binding NewerVersion}" Margin="5,0,0,0"/>
            <TextBlock Margin="5,0,0,0">
                <Hyperlink Command="{s:Action DownloadNewerVersion}">
                    <TextBlock>Download</TextBlock>
                </Hyperlink>
            </TextBlock>
        </StackPanel>
        <TextBlock DockPanel.Dock="Top" Margin="0,5,0,0">Created by Antony Male.</TextBlock>
        <TextBlock DockPanel.Dock="Top" Margin="0,0,0,5">Released under the MIT license.</TextBlock>
        <TextBlock DockPanel.Dock="Top" Margin="0,5">
            <Hyperlink Command="{s:Action ShowHomepage}">
                <TextBlock Text="{Binding HomepageUrl}"/>
            </Hyperlink>
        </TextBlock>
        <TextBlock DockPanel.Dock="Top" Margin="0,5">
            <Hyperlink Command="{s:Action ShowLicenses}">Show Open Source Licenses</Hyperlink>
        </TextBlock>
        <Button DockPanel.Dock="Bottom" Command="{s:Action Close}" IsDefault="True" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,5,0,0">Close</Button>
    </DockPanel>
</Window>
